    "def tough(indent, stars):\n",
    "    if stars <= 0:\n",
    "        return\n",
    "    \n",
    "    print(' ' * indent, end='')\n",
    "    \n",
    "    print('*' * stars)\n",
    "    \n",
    "    tough(indent + 1, stars - 2)\n",
    "\n",
    "\n",
    "tough(0, 0)\n",
    "print()\n",
    "tough(0, 1)\n",
    "print()\n",
    "tough(0,2)\n",
    "print()\n",
    "tough(0, 4)"
